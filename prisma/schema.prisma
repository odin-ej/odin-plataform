  reactions   MessageReaction[]

  @@index([channelId])
  @@index([authorId])
}

model MessageReaction {
  id String @id @default(uuid())

  emoji String?

  // Rela√ß√µes
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

